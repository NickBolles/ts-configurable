{
  "name": "node-ts-repo-template",
  "version": "1.0.0",
  "description": "Decentro standard template for bootstrapping node TypeScript repositories!",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "src/*",
    "dist/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p ./",
    "test": "jest --coverage --config ./jest.config.js",
    "lint": "tslint --project ./",
    "debug": "TS_NODE_PROJECT=tsconfig.json TS_NODE_FILE=true node -r ts-node/register --inspect=0.0.0.0 --inspect-brk example/index.ts",
    "start": "ts-node --project tsconfig.json example/simple.ts",
    "gen-doc": "typedoc --theme markdown --mdHideSources --hideGenerator --tsconfig tsconfig.json --out docs/typedoc src/lib/configurable.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix --project ./",
      "git add"
    ]
  },
  "prepublishOnly": "npm run build",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/decentro-gmbh/node-ts-repo-template.git"
  },
  "keywords": [],
  "author": "Decentro GmbH",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/decentro-gmbh/node-ts-repo-template/issues"
  },
  "homepage": "https://decentro-gmbh.github.io/node-ts-repo-template/",
  "devDependencies": {
    "@decentro/tslint": "^1.0.5",
    "@types/dotenv": "~6.1.0",
    "@types/jest": "^24.0.6",
    "@types/nconf": "~0.10.0",
    "@types/node": "^11.9.4",
    "husky": "~1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "~8.1.4",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-eslint-rules": "~5.4.0",
    "tslint-no-focused-test": "~0.5.0",
    "typedoc": "~0.14.2",
    "typedoc-plugin-markdown": "~1.1.27",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "dotenv": "~6.2.0",
    "is-plain-object": "~2.0.4",
    "nconf": "~0.10.0"
  }
}
