{
  "name": "ts-configurable",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "cleanup": "rm -r dist/ || true; rm -r coverage/ || true",
    "start": "ng serve",
    "build": "ng build",
    "pack-lib": "rm -r dist || true && tsc --build libs/ts-configurable/tsconfig.lib.json && npm run copy-files",
    "test": "ng test",
    "lint": "./node_modules/.bin/nx lint && ng lint",
    "format": "./node_modules/.bin/nx format:write",
    "format:write": "./node_modules/.bin/nx format:write",
    "format:check": "./node_modules/.bin/nx format:check",
    "update": "ng update @nrwl/schematics",
    "update:check": "ng update",
    "copy-readme": "cp README.md dist/libs/ts-configurable",
    "copy-license": "cp LICENSE dist/libs/ts-configurable",
    "copy-changelog": "cp CHANGELOG.md dist/libs/ts-configurable",
    "copy-package-json": "cp libs/ts-configurable/package.json dist/libs/ts-configurable",
    "copy-files": "run-s copy-readme copy-license copy-changelog copy-package-json"
  },
  "private": false,
  "dependencies": {
    "dotenv": "~6.2.0",
    "is-plain-object": "~2.0.4",
    "nconf": "~0.10.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.13.0",
    "@angular-devkit/build-ng-packagr": "~0.13.0",
    "@angular/cli": "7.3.1",
    "@angular/compiler-cli": "~7.2.0",
    "@nrwl/builders": "7.7.2",
    "@nrwl/schematics": "7.7.2",
    "@types/dotenv": "~6.1.0",
    "@types/jest": "24.0.9",
    "@types/nconf": "~0.10.0",
    "@types/node": "~8.9.4",
    "jest": "24.1.0",
    "ng-packagr": "^4.2.0",
    "prettier": "1.15.2",
    "ts-jest": "24.0.0",
    "ts-node": "~7.0.0",
    "tsickle": ">=0.34.0",
    "tslib": "^1.9.0",
    "tslint": "~5.11.0",
    "typescript": "3.2.2"
  }
}
